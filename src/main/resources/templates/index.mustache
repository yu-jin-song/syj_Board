{{>layout/header}}

<h1>강의 정보 게시판</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>생성일자</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/read/{{id}}">{{title}}</a></td>
                <td>{{createAt}}</td>
            </tr>
        {{/posts}}
        {{^posts}}게시글이 존재하지 않습니다.{{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}